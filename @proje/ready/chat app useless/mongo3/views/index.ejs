<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>chats</h1>
    <div class="chat">
       <form action="/chat/new" method="get">
        <button>new chat</button>
       </form>
        <% for (const chat of chats) { %>
            <div class="inner">
                <div class="from"><p>from : <%= chat.from %></p> </div>
                <div class="msg"><p><%= chat.msg %></p><form action="/chat/<%=chat._id%>/edit" method="get"><button id="editButton">edit</button></form></div>
                <p class="date">On <%= chat.created.toString().split(" ")[4] %></p>
                <p class="date">On <%= chat.created.toString().split(" ").splice(1,3).join(" ") %></p>
                <hr>
                <div class="to"><p>To : <%= chat.to %></p> </div><br>
                <a href="/chat/<%= chat._id %>/edit"><button>show</button></a>
                <form action="/chat/<%=chat._id%>/delete?method=Delete" method="post"><button>Delete</button></form>
            </div>
            
                <br><br>
         <%}  %>
    </div>
<script src="script.js"></script>
</body>
</html>