<% layout("./layout/boilerplate") %>
<body>
    <div class="fweight row row-md-2 ">
        <div class="col col-md-6 offset-md-3 mb-5">
            <h2>modify listing <%= listid.title %></h2>
            <form action="/listing/<%= listid._id %>/?_method=put" method="post">
                <div class="mb-0">
                    <label class="form-label" for="title">Title:</label>
                    <input type="text" name="listings[title]" id="title"  value='<%= listid.title %>'><br><br>
                </div>
                <div class="mb-0">
                    <label class="form-label" for="Description">Description :</label>
                    <textarea type="text" name="listings[description]" id="description"> <%= listid.description %></textarea><br><br>
                </div>
                <div class="mb-0">
                    <label class="form-label" for="image">Image:</label>
                    <textarea type="text" name="listings[image]" id="image" rows="5" cols="59"><%= listid.image %></textarea> <br><br>
                </div>
                <div class="mb-0">
                    <label class="form-label" for="Price">Price:</label>
                    <input type="number" name="listings[price]" id="price" value='<%= listid.price %>'><br><br>
                </div>
                <div class="mb-0">
                    <label class="form-label" for="Location">Location</label> 
                    <input type="text" name="listings[locationl]" id="location"  value='<%= listid.location %>'><br><br>
                </div>
                    <button  class="btn btn-dark">add</button>
            </form>
        </div>
    </div>       
            
</body>
